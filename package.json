{
  "name": "ac-companion",
  "displayName": "AC Companion",
  "description": "",
  "publisher": "ktsn-ud",
  "version": "2.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ktsn-ud/ac-companion.git"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ac-companion.start",
        "title": "AC Companion: Start"
      },
      {
        "command": "ac-companion.stop",
        "title": "AC Companion: Stop"
      },
      {
        "command": "ac-companion.runAll",
        "title": "AC Companion: Run All Tests"
      },
      {
        "command": "ac-companion.runOne",
        "title": "AC Companion: Run Test"
      }
    ],
    "configuration": {
      "title": "AC Companion",
      "properties": {
        "ac-companion.port": {
          "type": "number",
          "default": 10043,
          "description": "Competitive Companion が post するポート番号"
        },
        "ac-companion.testCaseSaveDirName": {
          "type": "string",
          "default": "tests",
          "description": "テストケースを保存するディレクトリ名"
        },
        "ac-companion.contestsDirName": {
          "type": "string",
          "default": "contests",
          "description": "コンテストフォルダを保存するベースディレクトリ（相対パス）"
        },
        "ac-companion.templateFilePath": {
          "type": "string",
          "default": ".config/templates/main.py",
          "description": "コードテンプレートファイルのパス"
        },
        "ac-companion.templateFilePathCpp": {
          "type": "string",
          "default": ".config/templates/main.cpp",
          "description": "C++ テンプレートファイルのパス"
        },
        "ac-companion.language": {
          "type": "string",
          "enum": [
            "python",
            "cpp"
          ],
          "default": "python",
          "description": "テスト実行で使用する言語"
        },
        "ac-companion.interpreter": {
          "type": "string",
          "enum": [
            "cpython",
            "pypy"
          ],
          "default": "cpython",
          "description": "Python 実行時のインタプリタ（language=python の場合に適用）"
        },
        "ac-companion.pythonCommand": {
          "type": "string",
          "default": "python",
          "description": "CPython 実行時のコマンド名またはパス"
        },
        "ac-companion.pypyCommand": {
          "type": "string",
          "default": "pypy3",
          "description": "PyPy 実行時のコマンド名またはパス"
        },
        "ac-companion.cppCompileCommand": {
          "type": "string",
          "default": "cpp_compile",
          "description": "C++ をコンパイルするコマンド（workspaceFolder 配下で実行される想定）"
        },
        "ac-companion.cppRunCommand": {
          "type": "string",
          "default": "cpp_run",
          "description": "C++ バイナリを実行するコマンド（問題別ディレクトリで実行される想定）"
        },
        "ac-companion.runCwdMode": {
          "type": "string",
          "enum": [
            "workspace",
            "task"
          ],
          "default": "workspace",
          "description": "テスト実行時のカレントディレクトリ"
        },
        "ac-companion.timeoutMs": {
          "type": [
            "number",
            "null"
          ],
          "default": null,
          "description": "個別テストケースのタイムアウト（ミリ秒）"
        },
        "ac-companion.compare.mode": {
          "type": "string",
          "enum": [
            "exact"
          ],
          "default": "exact",
          "description": "テスト出力の比較モード"
        },
        "ac-companion.compare.caseSensitive": {
          "type": "boolean",
          "default": true,
          "description": "比較時に大文字小文字を区別するか"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ac-companion",
          "title": "AC Companion",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "ac-companion": [
        {
          "id": "ac-companion.view",
          "name": "ACCP Panel",
          "icon": "media/icon.svg",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3"
  }
}
